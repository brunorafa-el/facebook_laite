<table>
  <tr class="board-bottom">
    <td class="pic-profile"><%= image_tag @user.gravatar_url(size: 200) %></td>
    <td class="name-profile"><%= @user.name %></td>
    <% if current_user == @user %>
    <td class="edit-profile"><%= link_to "Edit Profile", edit_user_registration_path %></td>
    <% end %>
  </tr>
</table>

<div class="no-posts">
  <%= "NO POSTS" if @user.posts.empty? %></td>
</div>

<% @user.posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>
