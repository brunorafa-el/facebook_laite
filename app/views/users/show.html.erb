<table>
  <tr>
    <td><%= image_tag @user.gravatar_url(size: 200, default: 'mm') %></td>
    <td><h1><%= @user.name %></h1></td>
    <td><%= link_to "Edit Profile", edit_user_registration_path %></td>
  </tr>
  <tr>
    <td><%= "NO POSTS" if @user.posts.empty? %></td>
  </tr>
</table>

<% @user_posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>
