<!-- Like/Comment counter -->
<%= pluralize(post.likes.count, "Like") %>
<%= pluralize(post.comments.count, "Comment") %>

<% if current_user.like?(post) %>
  <p>
    <%= button_to "Dislike", dislike_path(post_id: post.id), remote: true, method: :delete, class: "btn btn-sm btn-primary" %>
  </p>
<% else %>
  <p>
    <%= button_to "Like", like_path(post_id: post.id), remote: true, class: "btn btn-sm btn-primary" %>
  </p>
<% end %>
