<!DOCTYPE html>
<html>
  <head>
    <title>FacebookLaite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <div class="navbar-brand"><%= link_to "Facebook Laite", root_path, class: "logo" %></div>
        </div>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= image_tag current_user.gravatar_url(size: 30), class: "avatar img-circle" %></li>
            <li><%= link_to current_user.name, user_path(current_user) %></li>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to 'New Post', new_post_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </div>
    </nav>

    <div class="container">
      <div id="content" class="col-md-9 center-block">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
