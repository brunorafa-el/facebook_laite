<% if comment.comment %>
	<p><strong><%= comment.user.name %></strong></p>
	<p><%= time_ago_in_words(comment.created_at) %> ago</p>
	<p><%= comment.comment %></p>
<% end %>
<% if current_user == comment.user %>
<p><%= link_to 'Delete', [comment.post, comment],
							method: :delete,
							data: { confirm: 'Are you sure?' } %></p>
<% end %>
